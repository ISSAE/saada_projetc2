<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerProfileController</servlet-name>
        <servlet-class>Controller.CustomerProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductProfileController</servlet-name>
        <servlet-class>Controller.ProductProfileController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CardProfileController</servlet-name>
        <servlet-class>Controller.CardProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionProfileController</servlet-name>
        <servlet-class>Controller.TransactionProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerProfileController</servlet-name>
        <url-pattern>/CustomerProfileController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductProfileController</servlet-name>
        <url-pattern>/ProductProfileController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CardProfileController</servlet-name>
        <url-pattern>/CardProfileController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransactionProfileController</servlet-name>
        <url-pattern>/TransactionProfileController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <display-name>MainMenuToolbar</display-name>
            <url-pattern>/app/view/MainMenuToolbar.js</url-pattern>
        </jsp-property-group>
    </jsp-config>
    <ejb-local-ref>
        <ejb-ref-name>UserManagerImpl</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>Facade.UserManagerLocal</local>
        <ejb-link>CnamP2App-ejb.jar#UserManagerImpl</ejb-link>
    </ejb-local-ref>
</web-app>
